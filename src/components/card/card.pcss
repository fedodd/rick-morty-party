.card {
  margin: 0 30px 30px 0;
  width: 180px;
  height: 220px;
  position: relative;
}

.cardImg {
  width: 100%;
  height: 100%;
}

.cardClose {
  position: absolute;
  top: 5px;
  right: 5px;
  box-sizing: border-box;
  width: 30px;
  height: 30px;
  background: rgba(255, 255, 255, 0.75);

  &:hover {
    cursor: pointer;
  }
}
